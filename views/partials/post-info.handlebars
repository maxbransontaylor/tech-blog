<article class="card">
            <div class="card-title m-2">
                <h3>{{title}}  </h3>
            </div>
            <div class="card-body">
               <p> {{post_content}}</p>
            </div>
            <div class="card-footer">
                 by {{user.username}} on
                {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}}  comment(s)</a>
            </div>
        </article>